@model EquipmentShop.Core.Entities.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Товары</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>

        <div class="col-md-6">
            <h1>@Model.Name</h1>

            <div class="mb-3">
                <div class="h3 text-primary">@Model.Price.ToString("C0")</div>
                @if (Model.OldPrice.HasValue)
                {
                    <div class="text-muted text-decoration-line-through">
                        Старая цена: @Model.OldPrice.Value.ToString("C0")
                    </div>
                    <div class="text-success">
                        Скидка: @Model.GetDiscountPercentage().ToString("F0")%
                    </div>
                }
            </div>

            <div class="mb-3">
                <div class="text-warning mb-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="fas @(i <= Model.Rating ? "fa-star" : "fa-star-o")"></i>
                    }
                    <span class="text-muted ms-2">(@Model.ReviewsCount отзывов)</span>
                </div>
            </div>

            <div class="mb-4">
                @if (Model.StockQuantity > 0)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> В наличии
                    </div>
                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mt-3">
                        <input type="hidden" name="productId" value="@Model.Id">
                        <input type="hidden" name="quantity" value="1">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-cart-plus"></i> Добавить в корзину
                        </button>
                    </form>
                }
                else
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-times-circle"></i> Нет в наличии
                    </div>
                    <button class="btn btn-secondary btn-lg w-100" disabled>
                        Товар закончился
                    </button>
                }
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Описание</h5>
                </div>
                <div class="card-body">
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>