@model IEnumerable<EquipmentShop.Core.Entities.Product>
@{
    ViewData["Title"] = "Каталог товаров";
}

<div class="container mt-4">
    <h1>Каталог товаров</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            Товары не найдены
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4 mt-3">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@product.ImageUrl" class="card-img-top p-3" alt="@product.Name"
                             style="height: 200px; object-fit: contain;">

                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                                    @product.Name
                                </a>
                            </h5>

                            <div class="mb-2">
                                <span class="h5 text-primary">@product.Price.ToString("C0")</span>
                                @if (product.OldPrice.HasValue)
                                {
                                    <small class="text-muted text-decoration-line-through ms-2">
                                        @product.OldPrice.Value.ToString("C0")
                                    </small>
                                }
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge @(product.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                    @(product.StockQuantity > 0 ? "В наличии" : "Нет в наличии")
                                </span>

                                <div class="text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas @(i <= product.Rating ? "fa-star" : "fa-star-o")"></i>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-top-0">
                            <a asp-action="Details" asp-route-id="@product.Id"
                               class="btn btn-primary w-100">Подробнее</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>